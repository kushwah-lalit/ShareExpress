<div id="body" style="margin-top:8rem;">
    <% if(user.id != profile_user.id){ %>
    <div id="name" style="margin:5rem; width:50%;">
        <span class="TextinNav" style="font-size: 10rem;">Share</span><br><span class="TextinNav" style="font-weight:700; color:#ee1c24 ;font-size: 10rem;">Express</span>
    </div>
    <%} %>
    <div style="width:30%;display: flex;flex-direction:column;align-items: center;">
    <div class="circles" style="width:40%">
        <div class="circularimg">
            <img src="<%= user.avatar %>" alt="<%= user.name %>">
        </div>
        <div>
        <br>
        <span class="TextinBlock" style="font-size:0.9rem; font-weight:500;"><%= user.name%></span>
        </div>
    </div>
    <form style="margin-top:1rem;width:100%;height:350px">
        <!-- for the task tile -->
            <div id="tasktitle">
                <div class="headstyle">
                    <label for="titles">
                        E-Mail ID
                    </label>
                </div>
                <div class="Block" style=" padding: 4px 10px;color: lightgray;line-height: 1.6;font-size: 1.2rem;font-weight: 500;">
                    <%=profile_user.email%>
                </div>  
            </div>
            <!-- for the task description -->
            <div id="taskdescription">
                <div class="headstyle">
                    <label for="Describe">
                        Name
                    </label>
                </div>
                <div class="Block" style=" padding: 4px 10px;color: lightgray;line-height: 1.6;font-size: 1.2rem;font-weight: 500;">
                    <%=profile_user.name%>
                </div>
            </div>
            <div class="boxes" style="justify-content:center;margin-top:3rem;">
                <a href="/" class="TextinBlock catstyle" id="selectallbtn" style="font-size:1.2rem; font-weight:550;color:lightgrey;padding:15px 35px ;background-image:linear-gradient(45deg,rgba(238,28,36,0.6),rgba(33,38,44,0.7));border:1px grey solid;margin-right:3rem ;">Return</a>
            </div>
    </form>
    </div>  
    <!-- update only to signed in user -->
    <% if(user.id == profile_user.id){ %>
    <form action="/users/update/<%= profile_user.id %>" method="POST" enctype="multipart/form-data" style="width:30%;margin-top:5rem;">
        <!-- name -->
        <div id="tasktitle">
            <div class="headstyle">
                <label for="naam">
                   New Name
                </label>
            </div>
            <div class="Block">
                <input type="text" required="true" placeholder="What's your new Name?" id="naam" name="name">
            </div>  
        </div>
        <!-- for the task tile -->
            <div id="tasktitle">
                <div class="headstyle">
                    <label for="titles">
                       New E-Mail ID
                    </label>
                </div>
                <div class="Block">
                    <input type="email" required="true" placeholder="Enter your new E-mail Address" id="titles" name="email">
                </div>  
            </div>
            <div id="tasktitle">
                <div class="headstyle">
                    <label for="titles">
                       Upload Profile Picture
                    </label>
                </div>
                <div class="Block">
                    <input type="file" name="avatar"  placeholder="Profile Picture" id="titles">
                </div>  
            </div>
            <!-- for the task description -->
            <!-- <div id="tasktitle">
                <div class="headstyle">
                    <label for="Describe">
                        Password
                    </label>
                </div>
                <div class="Block">
                    <input type="password" required="true" placeholder="Enter your E-mail Password" id="Describe" name="password">
                </div>
            </div> -->
             <!-- for the task description -->
             <!-- <div id="tasktitle">
                <div class="headstyle">
                    <label for="confirm">
                        Confirm Password
                    </label>
                </div>
                <div class="Block">
                    <input type="password" required="true" placeholder="Confirm your E-mail Password" id="confirm" name="confirmpassword">
                </div>
            </div> -->
        <!-- add task and delete task button  -->
        <div class="boxes" style="justify-content:center; margin-top:3rem;">
            <button type="submit">Update</button>
        </div>
        
    </form>
    <%} %>
</div>
